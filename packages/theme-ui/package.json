{
  "name": "theme-ui",
  "version": "0.1.0",
  "description": "Build consistent, themeable React UIs based on design system constraints and design tokens",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "author": "Brent Jackson <jxnblk@gmail.com>",
  "license": "MIT",
  "repository": "system-ui/theme-ui",
  "scripts": {
    "prepare": "microbundle --no-compress",
    "watch": "microbundle watch --no-compress",
    "test": "jest"
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.0",
    "@emotion/styled": "^10.0.0",
    "@mdx-js/react": "^1.0.0"
  },
  "dependencies": {
    "@styled-system/color": "^5.0.5",
    "@styled-system/css": "^5.0.5",
    "@styled-system/flexbox": "^5.0.5",
    "@styled-system/layout": "^5.0.5",
    "@styled-system/space": "^5.0.5",
    "lodash.merge": "^4.6.0",
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@emotion/core": "^10.0.0",
    "@emotion/styled": "^10.0.0",
    "@mdx-js/mdx": "^1.0.0",
    "@mdx-js/react": "^1.0.0",
    "@testing-library/react": "^8.0.1",
    "jest": "^24.7.0",
    "jest-emotion": "^10.0.10",
    "microbundle": "^0.11.0",
    "react-test-renderer": "^16.8.6"
  },
  "jest": {
    "testRegex": "./test/.*.js$",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
